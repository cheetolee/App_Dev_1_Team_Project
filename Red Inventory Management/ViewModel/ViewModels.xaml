<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views = "clr-namespace:Inventory_Management.Views" 
                    xmlns:viewModels = "clr-namespace:Inventory_Management.ViewModel"
                    xmlns:entities ="clr-namespace:EntityLayer;assembly=EntityLayer">
    <DataTemplate DataType = "{x:Type viewModels:UsersViewModel}">
        <views:TableView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:ProductsViewModel}">
        <views:TableView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:ProductCategoriesViewModel}">
        <views:TableView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:TransactionsViewModel}">
        <views:TableView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:InventoryViewModel}">
        <views:ListView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:UserTransactionsViewModel}">
        <views:ListView/>
    </DataTemplate>
    <DataTemplate DataType = "{x:Type viewModels:SetupConnectionViewModel}">
        <views:SetupConnectionMenuView/>
    </DataTemplate>
</ResourceDictionary>